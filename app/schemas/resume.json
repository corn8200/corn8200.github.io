{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Resume Schema",
  "description": "Schema for a resume data file",
  "type": "object",
  "required": [
    "name",
    "title",
    "summary",
    "experience"
  ],
  "properties": {
    "format_scale": { "type": ["string", "number"] },
    "name": {
      "type": "string",
      "description": "Full name of the person"
    },
    "title": {
      "type": "string",
      "description": "Job title or role"
    },
    "contact": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "format": "email"
        },
        "linkedin": {
          "type": "string",
          "format": "uri"
        },
        "github": {
          "type": "string",
          "format": "uri"
        },
        "phone": {
          "type": ["string", "number"]
        },
        "location": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "summary": {
      "type": "string",
      "description": "Summary of qualifications"
    },
    "skills": {
      "description": "Skills can be an object (key-value pairs) or an array of strings",
      "oneOf": [
        {
          "type": "object",
          "additionalProperties": {
            "type": "array",
            "items": { "type": "string" }
          }
        },
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      ]
    },
    "experience": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["title", "company", "dates", "duties"],
        "properties": {
          "title": { "type": "string" },
          "company": { "type": "string" },
          "location": { "type": ["string", "null"] },
          "dates": { "type": "string" },
          "duties": {
            "type": "array",
            "items": { "type": "string" }
          },
          "achievements": {
            "type": "array",
            "items": { "type": "string" }
          }
        },
        "additionalProperties": false
      }
    },
    "education": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["degree", "school"],
        "properties": {
          "degree": { "type": "string" },
          "school": { "type": "string" },
          "year": { "type": ["integer", "string"] },
          "gpa": { "type": ["string", "number"] },
          "details": { "type": ["string", "null"] }
        },
        "additionalProperties": false
      }
    },
    "certifications": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "issuer"],
        "properties": {
          "name": { "type": "string" },
          "issuer": { "type": "string" },
          "year": { "type": ["string", "integer" ] }
        },
        "additionalProperties": false
      }
    },
    "training": {
      "type": "array",
      "items": { "type": "string" }
    },
    "awards": {
      "type": "array",
      "items": { "type": "string" }
    },
    "affiliations": {
      "type": "array",
      "items": { "type": "string" }
    },
    "cover_letter": {
      "type": "object",
      "properties": {
        "hiring_manager": { "type": "string" },
        "company_name": { "type": "string" },
        "recipient": {
          "type": "object",
          "properties": {
            "name": { "type": "string" },
            "title": { "type": "string" },
            "company": { "type": "string" },
            "address": { "type": "string" }
          },
          "additionalProperties": false
        },
        "salutation": { "type": "string" },
        "body": {
          "type": "array",
          "items": { "type": "string" }
        },
        "closing": { "type": "string" },
        "signature_name": { "type": "string" }
      },
      "additionalProperties": true
    },
    "meta": {
      "type": "object",
      "properties": {
        "slug": { "type": "string" },
        "version": { "type": "string" },
        "title": { "type": "string" },
        "aliases": {
          "type": "array",
          "items": { "type": "string" }
        },
        "kpis": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
